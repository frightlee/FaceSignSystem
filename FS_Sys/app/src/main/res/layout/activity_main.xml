<?xml version="1.0" encoding="utf-8"?>
<autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="facesign.adplayer.fanhong.fs_sys.MainActivity">

    <autolayout.AutoRelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="220px"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_cameras"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray1">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11px"
                android:background="@mipmap/tianjia" />

            <Button
                android:id="@+id/btn_set"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11px"
                android:background="@mipmap/shezhi" />
        </autolayout.AutoRelativeLayout>
    </autolayout.AutoRelativeLayout>

    <autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_blue"
            android:orientation="vertical">

            <autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:gravity="center">

                <ImageView
                    android:layout_width="84px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="24px"
                    android:src="@mipmap/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_name"
                    android:textColor="@color/black"
                    android:textSize="60px" />
            </autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_sign"
                android:layout_width="match_parent"
                android:background="@color/gray2"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="70px"
            android:layout_height="100px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right" />
    </autolayout.AutoRelativeLayout>
</autolayout.AutoLinearLayout>
