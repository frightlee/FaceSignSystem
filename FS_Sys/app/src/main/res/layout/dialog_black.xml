<?xml version="1.0" encoding="utf-8"?>
<autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lt_orange"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20px"
        android:text="@string/black_warning"
        android:textColor="@color/black"
        android:textSize="56px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="324px"
            android:layout_height="460.8px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80px"
            android:src="@mipmap/liantong" />

        <autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名：徐强"
                android:textColor="@color/black"
                android:textSize="40px" />
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：007"
                android:textColor="@color/black"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="摄像机：A1"
                android:textColor="@color/black"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="时间：2017/10/19\n　08:23:52"
                android:textColor="@color/black"
                android:textSize="40px" />
        </autolayout.AutoLinearLayout>
    </autolayout.AutoLinearLayout>
</autolayout.AutoLinearLayout>