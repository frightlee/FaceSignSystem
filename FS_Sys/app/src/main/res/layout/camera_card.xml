<?xml version="1.0" encoding="utf-8"?>
<autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220px"
    android:layout_height="120px"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:paddingTop="16px"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_centerVertical="true"
        android:src="@mipmap/shexiangtou" />

    <autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16px"
        android:layout_toRightOf="@id/img_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号：00"
            android:textColor="@color/black"
            android:textSize="14px" />

        <TextView
            android:id="@+id/tv_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:text="别名：A1"
            android:textColor="@color/black"
            android:textSize="14px" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:text="状态：未连接"
            android:textColor="@color/black"
            android:textSize="14px" />
    </autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="220px"
        android:layout_height="2px"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>
</autolayout.AutoRelativeLayout>
